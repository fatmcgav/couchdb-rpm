[Unit]
Description=CouchDB Server
After=network.target

[Service]
User=couchdb
Group=couchdb
Type=simple
StandardOutput=null
StandardError=journal
Restart=always
StartLimitInterval=10
StartLimitBurst=5
PIDFile=/var/run/couchdb/couchdb.pid
ExecStart=/bin/couchdb

[Install]
WantedBy=multi-user.target
